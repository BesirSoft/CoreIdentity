


@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<div class="bg-primary text-white p-1 m-1" asp-validation-summary="ModelOnly"></div>

<div class="bg-primary "></div>
<table class=" table table-bordered table-striped m-1 p-1">
    <tr>
        <th>Role Id</th>
        <th>Role Name</th>

        <th>Users</th>

        <th>İşlem</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>

            <td colspan="3" class="text-center">

                Kullanıcı bulunmuyor

            </td>
        </tr>
    }
    else
    {
        foreach (var user in Model)
        {
            <tr>

                <td> @user.Id   </td>
                <td>   @user.Name </td>
                <td>  l </td>

                <td>
                    <form asp-route-id="@user.Id" asp-action="Delete" method="post">
                        <button class="btn btn-danger"> Sil     </button>

                        <a asp-action="Update" asp-route-id="@user.Id" class="btn btn-primary"> Güncelle</a>


                    </form>

                </td>


            </tr>
        }

    }

</table>

<a asp-action="Create" class="btn btn-primary">Kullanıcı oluştur</a>